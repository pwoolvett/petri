# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

#  ----------------------------- extension-based -----------------------------

[*.bat]
indent_style = tab
end_of_line = crlf

[*.{diff,patch}]
trim_trailing_whitespace = false

[*.py]
max_line_length = 88

[*.{html,css,scss,json,yml,yaml, toml, ini}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.rst]
indent_size = 4

#  ------------------------------ specific files ------------------------------

[Dockerfile]
indent_size = 4

[LICENSE]
insert_final_newline = false

[Makefile]
indent_style = tab

[nginx.conf]
indent_style = space
indent_size = 2